<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sleepz.SleepAlarmActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/sleep_alarm_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24sp"
        android:text="Time to wake up?"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="30sp" />

    <TimePicker
        android:id="@+id/sleep_alarm_timepicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sleep_alarm_textview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31sp" />

    <TextView
        android:id="@+id/sleep_alarm_minutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sleep_alarm_timepicker"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46sp"
        android:text="Minutes to fall asleep?"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/sleep_alarm_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sleep_alarm_minutes"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Max 60"
        android:inputType="number" >

        <requestFocus />
    </EditText>

</RelativeLayout>
