<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_floating_material_dark">

    <TextView
        android:id="@+id/sleep_alarm_item_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25sp"
        android:layout_marginTop="14sp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/background_floating_material_light" />

    <TextView
        android:id="@+id/sleep_alarm_item_minutes"
        android:textColor="#ffffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/sleep_alarm_item_textview"
        android:layout_marginLeft="25sp"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/sleep_item_set_button"
        android:background="@drawable/custom_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/sleep_alarm_item_textview"
        android:layout_marginRight="33sp"
        android:layout_marginBottom="10sp"
        android:text="Pick Me"
        android:textColor="#ffffff" />

</RelativeLayout>